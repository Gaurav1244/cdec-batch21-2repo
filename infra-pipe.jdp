pipeline {
    agent any

    stages {

        stage('PULL') {
            steps {
                   git 'https://github.com/Gaurav1244/cdec-batch21-2repo.git'
            }
        }

        stage('PLAN') {
            steps {
                sh '''
                terraform init -reconfigure
                terraform plan
                '''
            }
        }

        stage('APPROVAL') {
            steps {
                timeout(time: 30, unit: 'MINUTES') {
                    input message: 'Approval is required. Shall we proceed?, OK : "Approve"'
                }
            }
        }

        stage('APPLY') {
            steps {
                sh '''
                terraform apply --auto-approve
                '''
            }
        }
    }
}
